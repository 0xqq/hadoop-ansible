# Hadoop Nodes
# ============

[zookeepers] # minimal 3, must be odd number of servers
hmaster01 zoo_id=1
hmaster02 zoo_id=2
hslave01 zoo_id=3
hslave02 zoo_id=4
hslave03 zoo_id=5

[namenodes]
hmaster01 ganglia_accept=true
hmaster02 ganglia_accept=true

[journalnodes] # minimal 3, must be odd number of servers
hmaster01
hmaster02
hslave01
hslave02
hslave03

[jobtrackers]
# Not needed for HBase

[datanodes]
hslave[01:10]

[tasktrackers]
# Not needed for HBase

# HBase Nodes
# ===========

[hbase_masters:children]
namenodes

[regionservers:children]
datanodes

[monitors]
monitor01

